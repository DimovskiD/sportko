<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip" >

    <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dip"
            android:contentDescription="@string/profile_photo"
            android:src="@drawable/ic_person_pin_black_24dp" />

    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/profile_photo"
            android:ellipsize="marquee"
            android:text="@string/description"
            android:textSize="12sp"
            android:singleLine="true"/>

    <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_photo"
            android:gravity="center_vertical"
            android:textSize="16sp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
     android:background="@color/white" android:layout_alignParentBottom="true"/>

</RelativeLayout>